#!/usr/bin/env perl

use strict;
use warnings;
use FindBin;
use lib "$FindBin::RealBin/../lib";
use Getopt::Long;
use CIHM::Meta::Dmdtask;
use Fcntl qw(:DEFAULT :flock);

my $conf     = "/etc/canadiana/tdr/tdr.conf";
my $lockfile = '/var/lock/tdr/dmdtask';
my $skip     = 0;
my $maxprocs = 4;
my $limit;
my $timelimit;
GetOptions(
    'conf:s'      => \$conf,
    'lockfile:s'  => \$lockfile,
    'skip:i'      => \$skip,
    'maxprocs:i'  => \$maxprocs,
    'limit:i'     => \$limit,
    'timelimit:i' => \$timelimit
);

# Only allow one instance to run at a time..
sysopen( FH, $lockfile, O_WRONLY | O_CREAT )
  or die "can't open lockfile=$lockfile: $!\n";
flock( FH, LOCK_EX | LOCK_NB )
  or exit 0;

CIHM::Meta::Dmdtask->new(
    {
        configpath => $conf,
        skip       => $skip,
        maxprocs   => $maxprocs,
        limit      => $limit,
        timelimit  => $timelimit
    }
)->dmdtask;

1;
__END__
